<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alab.for_j.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.alab.for_j.MainActivity"
        tools:showIn="@layout/app_bar_main">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:checked="false" />

            <EditText
                android:id="@+id/name_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_weight="1"
                android:hint="Search"
                android:inputType="textCapWords" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="0" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="0" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hot Movies"
                android:textAllCaps="true"
                android:textSize="20sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="219dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/busan" />

                <ImageView
                    android:layout_width="228dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/now_you_see_me" />

                <ImageView
                    android:layout_width="271dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/finding_dorry" />

                <ImageView
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/seondal" />

                <ImageView
                    android:layout_width="196dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/monster_watch" />

                <ImageView
                    android:layout_width="394dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="2.18"
                    android:scaleType="fitStart"
                    android:src="@drawable/ice_age" />

            </LinearLayout>
        </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:src="@drawable/hot_movie"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/top_movie" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/location" />

                </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/mood_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood"
                android:textSize="24sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="219dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:layout_weight="0.16"
                            android:scaleType="fitStart"
                            android:src="@drawable/busan" />

                        <ImageView
                            android:layout_width="228dp"
                            android:layout_height="150dp"
                            android:layout_margin="4dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/now_you_see_me" />

                        <ImageView
                            android:layout_width="271dp"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/finding_dorry" />

                        <ImageView
                            android:layout_width="232dp"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/seondal" />

                        <ImageView
                            android:layout_width="196dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="4dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/monster_watch" />

                        <ImageView
                            android:layout_width="394dp"
                            android:layout_height="150dp"
                            android:layout_margin="4dp"
                            android:layout_weight="2.18"
                            android:scaleType="fitStart"
                            android:src="@drawable/ice_age" />

                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/smiley"
                    android:scaleType="fitCenter"
                    android:layout_weight="0.09" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Coming soon"
                android:textSize="24sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="219dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.16"
                    android:scaleType="fitStart"
                    android:src="@drawable/busan" />

                <ImageView
                    android:layout_width="228dp"
                    android:layout_height="150dp"
                    android:layout_margin="4dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/now_you_see_me" />

                <ImageView
                    android:layout_width="271dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/finding_dorry" />

                <ImageView
                    android:layout_width="232dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/seondal" />

                <ImageView
                    android:layout_width="196dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/monster_watch" />

                <ImageView
                    android:layout_width="394dp"
                    android:layout_height="150dp"
                    android:layout_margin="4dp"
                    android:layout_weight="2.18"
                    android:scaleType="fitStart"
                    android:src="@drawable/ice_age" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>